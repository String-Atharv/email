{
    "name":"Email Writer Assistant",
    "description":"An AI assistant that helps you write professional and effective emails based on your input.",
    "version":"1.0.0",
    "manifest_version":3,
    "permissions":["storage","activeTab"],
    "host_permissions":["https:localhost:8080/*","*://mail.google.com/*"],
    "content_scripts":[
        {
            "matches":["*://mail.google.com/*"],
            "js":["content.js"],
            "run_at":"document_end"
        }
    ],
    "web_accessible_resources":[
        {
            "resources":["icons/*"],
            "matches":["*://mail.google.com/*"]
        }
    ],
    "action":{
        "default_title":"Email Writer Assistant"
    }
}